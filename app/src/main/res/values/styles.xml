<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/secondary</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="colorOnSecondary">@color/colorWhite</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:textColor">@color/textBody</item>
        <item name="android:textColorHint">@color/textHint</item>
        <item name="android:textColorPrimary">@color/textTitle</item>
        <item name="android:textColorSecondary">@color/textBody</item>
        <item name="android:colorBackground">@color/colorBackground</item>

        <item name="detailItemViewStyle">@style/ItemDetail</item>
        <item name="detailListItemViewStyle">@style/ListItemDetail</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="ItemDetail" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ItemDetailLayout" parent="Widget.AppCompat.ListView">
        <item name="android:divider">?android:attr/listDivider</item>
        <item name="android:orientation">vertical</item>
        <item name="android:showDividers">beginning|middle</item>
    </style>

    <style name="ListItemDetail" parent="ItemDetail">
        <item name="android:paddingTop">@dimen/padding_cardview_text</item>
        <item name="android:paddingBottom">@dimen/padding_cardview_text</item>
    </style>

    <style name="ItemDetailCardViewHeader">
        <item name="android:paddingLeft">@dimen/text_margin_right_left</item>
        <item name="android:paddingRight">@dimen/text_margin_right_left</item>
        <item name="android:paddingTop">@dimen/padding_cardview_text</item>
        <item name="android:paddingBottom">@dimen/padding_cardview_text</item>
        <item name="android:textAppearance">?android:attr/textAppearanceListItem</item>
        <item name="android:background">@color/primary_light</item>
    </style>

    <style name="DetailCardView" parent="CardView">
        <item name="cardCornerRadius">0dp</item>
        <item name="useCompatPadding">true</item>
        <item name="android:paddingLeft">@dimen/text_margin_right_left</item>
        <item name="android:paddingRight">@dimen/text_margin_right_left</item>
        <item name="android:paddingTop">@dimen/padding_cardview_text</item>
        <item name="android:paddingBottom">@dimen/padding_cardview_text</item>
        <item name="android:textAppearance">?android:attr/textAppearanceListItem</item>
    </style>

    <style name="ApkActionButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:padding">@dimen/activity_vertical_margin</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <style name="AdDivider">
        <item name="android:background">@color/primary</item>
        <item name="android:animateLayoutChanges">true</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="fab_card">
        <item name="android:background">@drawable/fab_background</item>
    </style>

    <style name="speed_dial_item_card">
        <item name="android:background">@drawable/fab_menu_item_card_background</item>
    </style>

    <style name="ListItemTitle">
        <item name="android:color">?android:attr/textColorPrimary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/fontSizeSmall</item>
    </style>

    <style name="ListItemSubtitleTitle">
        <item name="android:color">?android:attr/textColorSecondary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/fontSizeSmaller</item>
    </style>

</resources>

